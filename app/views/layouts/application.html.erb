<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= javascript_include_tag :defaults %>
    <%= stylesheet_link_tag "/assets/bootstrap/css/bootstrap.css" %>
    <%= javascript_include_tag "/assets/bootstrap/js/bootstrap.js" %>
    <%= csrf_meta_tag %>

    <%= stylesheet_link_tag "/assets/css/cineto.css" %>
    <%= yield(:head) %>
  </head>
  <body>

    <div class="navbar">
      <div class="navbar-inner">
        <%= link_to "Cineto", root_path, :class => "brand" %>
        <ul class="nav">
          <li class="active"><%= link_to "Torrents", torrents_path %></li>
        </ul>
      </div>
    </div>

    <div class="container">
      <% flash.each do |type, message| %>
        <%= content_tag :div, message, :id => "flash_#{type}", :class => twitterized_type( type ) %>
      <% end %>

      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>
  </body>
</html>
